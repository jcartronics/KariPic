<%= link_to "Volver a Publicaciones", posts_path, class: "btn btn-primary my-1" %>

<%= render @post %>

<h2>Comentarios:</h2>

<%= render "comments/comments" %>

<% if user_signed_in? %>
  <% if current_user.admin? || current_user == @post.user %>
    <div>
      <%= link_to "Editar publicación", edit_post_path(@post), class: "btn btn-primary" %>
      <%= button_to "Eliminar Publicación", @post, method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-danger my-2" %>
    </div>
  <% end %>
<% end %>